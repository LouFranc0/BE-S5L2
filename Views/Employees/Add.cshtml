@{
    ViewData["Title"] = "Aggiungi dipendente";
}
<div class="container">
    <h2>Aggiungi Dipendente</h2>
    <form>
        <div class="form-group">
            <label for="name">Nome:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your name">
        </div>
        <div class="form-group">
            <label for="surname">Cognome:</label>
            <input type="text" class="form-control" id="surname" placeholder="Enter your surname">
        </div>
        <div class="form-group">
            <label for="address">Indirizzo:</label>
            <textarea class="form-control" id="address" rows="3" placeholder="Enter your address"></textarea>
        </div>
        <div class="form-group">
            <label for="cf">Codice fiscale:</label>
            <input type="text" class="form-control" id="cf" placeholder="Enter your CF">
        </div>
        <div class="form-group">
            <h3 class="text">Coniugato: </h3>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="married" id="married" value="yes" checked>
                <label class="form-check-label" for="exampleRadios1">
                    Yes
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="married" id="notMarried" value="no">
                <label class="form-check-label" for="exampleRadios2">
                    No
                </label>
            </div>
            <div class="form-group">
                <label for="childrenCount">Figli a carico</label>
                <input type="number" class="form-control" id="childrenCount"
                    placeholder="Enter number of dependent children">
            </div>
            <div class="form-group">
                <label for="job">Mansione:</label>
                <input type="text" class="form-control" id="job" placeholder="Job">
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </div>
    </form>
</div>